{
  "name": "dashtar-admin",
  "version": "0.1.0",
  "description": "this is the server of dashtar built with node, express, mongoose schema validation and use mongodb as a database",
  "main": "index.js",
  "scripts": {
    "start:dev": "nodemon index.js",
    "start-client": "cd frontend && npm start",
    "start": "concurrently -k \"node index.js\" \"npm run start-client\"",
    "install-client": "cd frontend && npm install --legacy-peer-deps",
    "build-client": "cd frontend && npm run build",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run install-client && npm run build-client"
  },
  "author": "htmlLover",
  "license": "ISC",
  "dependencies": {
    "@pagofacil/api_pago_facil": "^2.1.4",
    "@pagofacil/sdk-apis-javascript-signature": "^1.0.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cloudinary": "^1.26.3",
    "concurrently": "^7.3.0",
    "config": "^3.3.7",
    "cors": "^2.8.5",
    "dayjs": "^1.10.7",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^6.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.8",
    "mongoose-sequence": "^5.3.1",
    "multer": "^1.4.3",
    "nodemailer": "^6.7.2",
    "path": "^0.12.7",
    "socket.io": "^4.4.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.12"
  },
  "engines": {
    "node": "16.13.1",
    "npm": "8.5.2"
  }
}
